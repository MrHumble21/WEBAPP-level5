@model IEnumerable<web12190.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="my-0">Product List</h1>
    <p class="my-0">
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </p>
</div>

<div class="row justify-content-start g-3">
    @foreach (var item in Model)
    {
    <div class="col-6 col-lg-3 mb-3">
        <div class="card">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">@Html.DisplayFor(modelItem => item.Name)</li>
                <li class="list-group-item">@Html.DisplayFor(modelItem => item.Price)</li>
            </ul>
            <div class="card-body text-end">
               <div class="d-flex justify-content-between ">
                        <a asp-action="Edit" asp-route-id="@item.Id">
                            <button class="btn w-100 btn-sm btn-success">Edit</button>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id">
                            <button class="btn w-100 btn-sm btn-info">Details</button>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id">
                            <button class="btn w-100 btn-sm btn-danger">Delete</button>
                        </a>
                    </div>
            </div>
        </div>
    </div>
    }
</div>